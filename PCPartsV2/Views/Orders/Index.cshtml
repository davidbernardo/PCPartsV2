@model IEnumerable<PCPartsV2.Models.Orders>

@{
    ViewBag.Title = "Index";
}

<div>
    <h2 class="page-header">Check Orders</h2>
    <div class="row" style="margin-bottom:1.4em;">
        <div class="col-md-3">
            <h3 style="font-weight:bold;margin-top:1em">Name</h3>
        </div>
        <div class="col-md-3">
            <h3 style="font-weight:bold;margin-top:1em">Price</h3>
        </div>
        <div class="col-md-2">
            <h3 style="font-weight:bold;margin-top:1em">Date</h3>
        </div>
        <div class="col-md-2">
            <h3 style="font-weight:bold;margin-top:1em">Status</h3>
        </div>
        <div class="col-md-2">
            <h3 style="font-weight:bold;margin-top:1em"></h3>
        </div>
        <div style="border-bottom: 1px solid #ccc;"></div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row" style="margin-bottom:1em;">
            <div class="col-md-3">
                <p style="line-height: 0em;margin: 2em 0em 1em">@item.User.UserName</p>
            </div>
            <div class="col-md-3">
                <p style="line-height: 0em;margin: 2em 0em 1em">@item.Price€</p>
            </div>
            <div class="col-md-2">
                <p style="line-height: 0em;margin: 2em 0em 1em">@item.OrderDate.ToShortDateString()</p>
            </div>
            <div class="col-md-2">
                <p style="line-height: 0em;margin: 2em 0em 1em">@item.Status</p>
            </div>
            <div class="col-md-2" style="line-height: 0em;margin: 2em 0em 1em">
                <a href="~/Orders/Details/@item.OrderID" class="w3ls-cart">
                    Details
                </a>
            </div>
            <div style="border-bottom: 1px solid #ccc;"></div>
        </div>
    }
</div>
