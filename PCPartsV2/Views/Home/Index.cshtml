<div class="banner">
    <div class="container">
        <h3>PCParts, <span>Best Prices</span></h3>
    </div>
</div>
<div class="new-products">
    <div class="container">
        <h3>New Products</h3>

        <div class="agileinfo_new_products_grids">
            @using PCPartsV2.Models
            @foreach (var item in ViewBag.RecentProducts as IEnumerable<Products>)
            {
                <div class="col-md-3 agileinfo_new_products_grid">
                    <div class="agile_ecommerce_tab_left agileinfo_new_products_grid1">
                        <div>
                            <img src="~/ProductsPhotos/@item.Image" alt=" " class="img-responsive" />
                        </div>
                        <h5>@Html.ActionLink(item.Name, "Details", "Products", new { id = item.ProductID }, null)</h5>
                        <div class="simpleCart_shelfItem">
                            @{
                                if (@item.Discount == 0)
                                {
                                    <p><i class="item_price">@item.Price€</i></p>
                                }
                                else
                                {
                                    double discount = (double)@item.Price;
                                    double percentage = discount / 100;
                                    double discountedPrice = @item.Price * percentage;
                                    <p><span>@item.Price€</span> <i class="item_price">@discountedPrice€</i></p>
                                }
                            }
                            @if (Request.IsAuthenticated)
                            {
                                <form action="#" method="post">
                                    <a href="@Url.Action("AddToCart", "Cart", new { ProductID = item.ProductID, RedirectTo = "home/index" })" class="w3ls-cart">
                                        Add To Cart
                                    </a>
                                </form>
                            }
                        </div>
                    </div>
                </div>
                                }
            <div class="clearfix"> </div>

        </div>

    </div>
</div>
